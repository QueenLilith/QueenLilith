<!-- User Configuration -->
<!DOCTYPE Profile [

<!ENTITY DiscoverUnknowns "True">
<!ENTITY CordialGrade "Cordial"> <!-- Cordial or Hi-Cordial -->

<!ENTITY FarmItemID "19958"> <!-- 19958 for Palladium Ore or 19959 for Chromite Ore. ONLY ONE! --> 
<!ENTITY FarmAmount "99"> <!-- Number of above item farmed until profile stops -->
<!ENTITY FarmSkill "Unearth II"> <!-- Replace with the skill you wish to use while farming. IE: "King's Yield II" or "Unearth II" -->

<!ENTITY WaitZoneID "635">
<!ENTITY WaitTeleportName "Rhalgr's Reach">
<!ENTITY WaitTeleportID "104">

<!ENTITY LogColor "#66FF66">
]>

<!-- Start Routine -->
<Profile>
	
	<Name>[MIN] Palladium and Chromite</Name>
	<KillRadius>25</KillRadius>

	<CodeChunks>
		<CodeChunk Name="Miner">
			<![CDATA[ 
				ff14bot.Managers.ChatManager.SendChat("/gs change 6");
		]]>
		</CodeChunk>
	</CodeChunks>
	
	<Order>

	<While Condition="not HasAtLeast(&FarmItemID;,&FarmAmount;)">

		<!-- Switch Gear Set to Miner -->
		<If Condition="ClassName != ClassJobType.Miner">
			<RunCode Name="Miner" />
			<WaitTimer WaitTime="3" />
		</If>


		<If Condition="IsTimeBetween(0,4)">

			<ExLog Color="&LogColor;" Name="Wait" Message="Moving to Wait Location" />

			<If Condition="not IsOnMap(&WaitZoneID;)">
				<TeleportTo name="&WaitTeleportName;" aetheryteId="&WaitTeleportID;" />
			</If>

			<ExLog Color="&LogColor;" Name="Wait" Message="Waiting for next node spawn" />

			<WaitWhile Condition="IsTimeBetween(0,4)" />
			
		</If>

		<!-- Palladium Ore -->
		<If Condition="IsTimeBetween(4,6)">
				
			<If Condition="not IsOnMap(614)">
				<TeleportTo name="The House of the Fierce" aetheryteId="108" />
			</If>

			<NoCombatMoveTo Name="Waiting Area" XYZ="246.0629, 77.57146, -409.364" />
			<NoCombatMoveTo Name="Waiting Area" XYZ="-20.55031, 122.0667, -564.0088" />

			<ExGather DiscoverUnknowns="&DiscoverUnknowns;" CordialType="&CordialGrade;" Loops="1">
		
				<GatherObject>Legendary Mineral Deposit</GatherObject>
		
				<HotSpots>
					<HotSpot Radius="100" XYZ="-20.55031, 122.0667, -564.0088" name="Palladium Ore" />
					<HotSpot Radius="100" XYZ="-123.0026, 96.3432, -659.2435" name="Palladium Ore" />
				</HotSpots>
		
				<Slot>5</Slot>

				<GatheringSkillOrder>
					<GatheringSkill SpellName="&FarmSkill;" TimesToCast="1" />
				</GatheringSkillOrder>
			
			</ExGather>

		</If>


		<If Condition="IsTimeBetween(4,10)">

			<ExLog Color="&LogColor;" Name="Wait" Message="Moving to Wait Location" />

			<If Condition="not IsOnMap(&WaitZoneID;)">
				<TeleportTo name="&WaitTeleportName;" aetheryteId="&WaitTeleportID;" />
			</If>

			<ExLog Color="&LogColor;" Name="Wait" Message="Waiting for next node spawn" />

			<WaitWhile Condition="IsTimeBetween(4,10)" />
			
		</If>

		<!-- Chromite Ore -->
		<If Condition="IsTimeBetween(10,12)">
				
			<If Condition="not IsOnMap(620)">
				<TeleportTo name="Ala Ghiri" aetheryteId="101" />
			</If>

			<NoCombatMoveTo Name="Waiting Area" XYZ="-214.2586, 294.3613, 634.1948" />
	
			<ExGather DiscoverUnknowns="&DiscoverUnknowns;" CordialType="&CordialGrade;" Loops="1">
		
				<GatherObject>Unspoiled Mineral Deposit</GatherObject>
		
				<HotSpots>
					<HotSpot Radius="100" XYZ="-214.2586, 294.3613, 634.1948" name="Chromite Ore" />
				</HotSpots>
		
				<Slot>5</Slot>

				<GatheringSkillOrder>
					<GatheringSkill SpellName="&FarmSkill;" TimesToCast="1" />
				</GatheringSkillOrder>
			
			</ExGather>

		</If>


		<If Condition="IsTimeBetween(10,16)">

			<ExLog Color="&LogColor;" Name="Wait" Message="Moving to Wait Location" />

			<If Condition="not IsOnMap(&WaitZoneID;)">
				<TeleportTo name="&WaitTeleportName;" aetheryteId="&WaitTeleportID;" />
			</If>

			<ExLog Color="&LogColor;" Name="Wait" Message="Waiting for next node spawn" />

			<WaitWhile Condition="IsTimeBetween(10,16)" />
			
		</If>

		<!-- Palladium Ore -->
		<If Condition="IsTimeBetween(16,18)">
				
			<If Condition="not IsOnMap(614)">
				<TeleportTo name="The House of the Fierce" aetheryteId="108" />
			</If>

			<NoCombatMoveTo Name="Waiting Area" XYZ="246.0629, 77.57146, -409.364" />
			<NoCombatMoveTo Name="Waiting Area" XYZ="-20.55031, 122.0667, -564.0088" />
	
			<ExGather DiscoverUnknowns="&DiscoverUnknowns;" CordialType="&CordialGrade;" Loops="1">
		
				<GatherObject>Legendary Mineral Deposit</GatherObject>
		
				<HotSpots>
					<HotSpot Radius="100" XYZ="-20.55031, 122.0667, -564.0088" name="Palladium Ore" />
					<HotSpot Radius="100" XYZ="-123.0026, 96.3432, -659.2435" name="Palladium Ore" />
				</HotSpots>
		
				<Slot>5</Slot>

				<GatheringSkillOrder>
					<GatheringSkill SpellName="&FarmSkill;" TimesToCast="1" />
				</GatheringSkillOrder>
			
			</ExGather>

		</If>


		<If Condition="IsTimeBetween(16,22)">

			<ExLog Color="&LogColor;" Name="Wait" Message="Moving to Wait Location" />

			<If Condition="not IsOnMap(&WaitZoneID;)">
				<TeleportTo name="&WaitTeleportName;" aetheryteId="&WaitTeleportID;" />
			</If>

			<ExLog Color="&LogColor;" Name="Wait" Message="Waiting for next node spawn" />

			<WaitWhile Condition="IsTimeBetween(16,22)" />
			
		</If>

		<!-- Chromite Ore -->
		<If Condition="IsTimeBetween(22,24)">
				
			<If Condition="not IsOnMap(620)">
				<TeleportTo name="Ala Ghiri" aetheryteId="101" />
			</If>

			<NoCombatMoveTo Name="Waiting Area" XYZ="-214.2586, 294.3613, 634.1948" />
	
			<ExGather DiscoverUnknowns="&DiscoverUnknowns;" CordialType="&CordialGrade;" Loops="1">
		
				<GatherObject>Unspoiled Mineral Deposit</GatherObject>
		
				<HotSpots>
					<HotSpot Radius="100" XYZ="-214.2586, 294.3613, 634.1948" name="Chromite Ore" />
				</HotSpots>
		
				<Slot>5</Slot>

				<GatheringSkillOrder>
					<GatheringSkill SpellName="&FarmSkill;" TimesToCast="1" />
				</GatheringSkillOrder>
			
			</ExGather>

		</If>


		<If Condition="IsTimeBetween(22,24)">

			<ExLog Color="&LogColor;" Name="Wait" Message="Moving to Wait Location" />

			<If Condition="not IsOnMap(&WaitZoneID;)">
				<TeleportTo name="&WaitTeleportName;" aetheryteId="&WaitTeleportID;" />
			</If>

			<ExLog Color="&LogColor;" Name="Wait" Message="Waiting for next node spawn" />

			<WaitWhile Condition="IsTimeBetween(22,24)" />
			
		</If>


	</While>

	</Order>

</Profile>